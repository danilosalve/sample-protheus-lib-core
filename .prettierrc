{
  "trailingComma": "es5",
  "arrowParens": "avoid",
  "printWidth": 120,
  "singleQuote": true,
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "quoteProps": "preserve",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "angular"
      }
    }
  ]
}
